{
  "type": "module",
  "name": "ai-auto-bot",
  "productName": "AI Auto Bot",
  "version": "1.0.0",
  "description": "AI Auto Bot desktop application built with Electron",
  "main": "main.cjs",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:dir": "electron-builder --dir",
    "dist:unsigned": "electron-builder --win --x64 --dir -c.win.sign=false -c.win.requestedExecutionLevel=asInvoker",
    "init:key": "node scripts/init-encryption.cjs",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "security-check": "npm audit"
  },
  "author": "CROTTY <Crottyjonathan@yahoo.com>",
  "dependencies": {
    "axios": "^1.12.2",
    "dotenv": "^17.2.2",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "ffmpeg-static": "^5.2.0",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.38.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.4.0",
    "jest": "^30.2.0"
  },
  "build": {
    "appId": "com.j.ai-autobot",
    "productName": "AI Auto Bot",
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,LICENSE,*.d.ts}",
      "!**/*.{map,md,txt}",
      "!.env",
      "!.env.example",
      "!.git*",
      "!.eslint*",
      "!.prettier*",
      "!.secretlint*",
      "!*.config.{js,cjs}",
      "!coverage/**",
      "!tests/**",
      "!docs/**",
      "!restore-points/**",
      "!.github/**",
      "!.vscode/**",
      "!data/*.json",
      "!logs/**"
    ],
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "101Toast101",
      "repo": "ai-auto-bot"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "forceCodeSigning": false,
      "icon": "ABS.ico",
      "publisherName": "CROTTY"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  }
}
