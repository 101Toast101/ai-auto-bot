{
  "type": "module",
  "name": "ai-auto-bot",
  "productName": "AI Auto Bot",
  "version": "1.0.0",
  "description": "AI Auto Bot desktop application built with Electron",
  "main": "main.cjs",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:dir": "electron-builder --dir",
    "dist:unsigned": "electron-builder --win --x64 --dir -c.win.sign=false -c.win.requestedExecutionLevel=asInvoker",
    "init:key": "node scripts/init-encryption.cjs",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "security-check": "npm audit && npx snyk test",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "jest --findRelatedTests"
    ]
  },
  "author": "CROTTY <Crottyjonathan@yahoo.com>",
  "dependencies": {
    "axios": "^1.12.2",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "ffmpeg-static": "^5.2.0",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.38.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "snyk": "^1.1300.1"
  },
  "build": {
    "appId": "com.j.ai-autobot",
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md}"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist"
    },
    "win": {
      "target": ["nsis"],
      "forceCodeSigning": false,
      "icon": "ABS.ico"
    },
    "linux": {
      "target": ["AppImage"]
    }
  }
}
