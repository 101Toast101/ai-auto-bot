{
  "name": "ai-auto-bot",
  "productName": "AI Auto Bot",
  "version": "1.0.0",
  "description": "AI Auto Bot desktop application built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:dir": "electron-builder --dir",
    "dist:unsigned": "electron-builder --win --x64 --dir -c.win.sign=false -c.win.requestedExecutionLevel=asInvoker",
    "init:key": "node scripts/init-encryption.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "security-check": "npm audit && npx snyk test",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "jest --findRelatedTests"
    ]
  },
  "author": "CROTTY <Crottyjonathan@yahoo.com>",
  "license": "MIT",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "dotenv": "^17.2.2",
    "gif-encoder-2": "^1.0.5",
    "lru-cache": "^11.2.2",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "electron": "^38.4.0",
    "electron-builder": "^24.6.0",
    "eslint": "^9.37.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.4",
    "snyk": "^1.1300.0"
  },
  "build": {
    "appId": "com.j.ai-autobot",
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md}"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "sign": false
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "desktop": {
        "StartupWMClass": "ai-auto-bot"
      }
    }
  }
}
