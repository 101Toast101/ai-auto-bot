{
  "rules": [
    {
      "id": "@secretlint/secretlint-rule-preset-recommend"
    },
    {
      "id": "@secretlint/secretlint-rule-git",
      "options": {
        "allows": ["GIT_COMMITTER_NAME", "GIT_COMMITTER_EMAIL"]
      }
    },
    {
      "id": "@secretlint/secretlint-rule-base64",
      "options": {
        "allows": ["data:image/png;base64"]
      }
    }
  ],
  "allowMessageIds": [],
  "ignoreFilePathPatterns": [
    "**/node_modules/**",
    "**/coverage/**",
    "**/dist/**",
    "**/*.min.js"
  ]
}